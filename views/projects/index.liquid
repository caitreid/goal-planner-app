{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-fluid projects">
    {% render '../logo.liquid' %}
    <div class="">
        <h2 class="display-6 projects__title">All Projects</h2>
        <br>
        <p>Create a new <a href="/projects/new">project</a>.</p>
    </div>
    <div class="row mx-4">
      {% if projects.length > 0 %}
        {% for project in projects %}
          <div class="card card__projects m-3">
            <h3 class="card-header">{{ project.title }}</h5>
            <div class="card-body">
              {% if project.due %}
                <b>Due:
                </b>
                <p>{{ project.due | date: "%A, %B %d, %Y" }}
                </p>
              {% endif %}
              {% if project.description %}
                <b>Description:
                </b>
                <p>{{ project.description }}</p>
              {% endif %}
              

              <a href="/projects/{{ project.id }}" class="btn btn-info">
                View
              </a>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p>Create a new
          <a href="/projects/new">project</a>.</p>
      {% endif %}
    </div>
    <br>
    <br>
  </div>
{% endblock %}