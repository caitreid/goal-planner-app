{% layout 'layout.liquid' %}
{% block content %}

  <div class="container-fluid front">
    <div class="card__container">
      {% render '../logo.liquid' %}
      <p>Welcome Back. Please log in to continue.</p>
      <form
        action="/auth/login"
        method="POST"
        class="form-inline">
        <fieldset>

          <div class="form-group py-2">
            <label class="form-label sr-only">Username</label>
            <input
              type="text"
              name="username"
              placeholder="Username"
              class="form-control"
              required>
          </div>
          <div class="form-group py-2">
            <label class="form-label">Password</label>
            <input
              type="password"
              name="password"
              placeholder="Enter password"
              class="form-control"
              required>
          </div>
          <br>
        </fieldset>
        <input
          type="submit"
          value="Log In"
          class="btn btn-dark my-2 p-3">
      </form>
      <br>
      <p>Sign up
        <a href="/auth/signup">here</a>.</p>
    </div>
  </div>


{% endblock %}