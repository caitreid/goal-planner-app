{% layout 'layout.liquid' %}
{% block content %}

  <div class="container-fluid front">
    <div class="card___container">
      {% render '../logo.liquid' %}

      <form action="/auth/signup" method="POST">
        <fieldset>
          <div class="py-2">
            <label class="form-label">Username</label>
            <input
              type="text"
              name="username"
              placeholder="Username"
              class="form-control"
              required>
          </div>
          <div class="py-2">
            <label class="form-label">Password</label>
            <input
              type="password"
              name="password"
              placeholder="Enter password"
              class="form-control"
              required>
          </div>
        </fieldset>
        <br>
        <input
          type="submit"
          value="Create Account"
          class="btn btn-dark my-2 p-3">
      </form>
      <br><br>
      <p>Have an account?
        <a href="./login">Sign in</a>.</p>
    </div>
  </div>

{% endblock %}