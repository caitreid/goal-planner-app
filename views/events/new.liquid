{% layout 'layout.liquid' %}
{% block content %}
<div class="container-fluid events">
    {% render '../logo.liquid' %}
    <div class="row">
        <div class="col-md-3 col-sm-12">
            <h2 class="display-6">Create <br>New Event</h2>
            <!-- <p class="light">All <a href="/events">events.</a></p>-->
        </div>
        
        <div class="col-md-9 col-sm-12">
            <div class="row">
                <form class="new" action="/events" method="POST">
                    <fieldset>
                        <div class="py-2">
                            <label class="form-label">Title: </label>
                            <input 
                                type="text" 
                                name="title" 
                                placeholder="Event title"
                                class="form-control"
                            >
                        </div>
                        <div class="py-2">
                            <label class="form-label">Description:</label>
                            <input 
                                type="text" 
                                name="description" 
                                placeholder="Description" 
                                class="form-control"
                            >
                        </div>
                        <div class="py-2">
                            <label class="form-label">Date:</label>
                            <input required
                                id="datePicker"
                                type="date" 
                                name="date" 
                                placeholder="" 
                                class="form-control"
                            >
                        </div>
                        <div class="py-2">
                            {% if categories.length > 0 %}
                            <label id="category">Categories</label>
                            <select name="category" class="form-select" id="category">
                                <option value="">--Please choose an option--</option>
                                {% for category in categories %}
                                    <option name="category" value="{{ category.id }}">{{ category.title | capitalize }}</option>
                                {% endfor %}
                            </select>
                        {% endif %}
                        </div>
                        <div class="py-2">
                            {% if projects.length > 0 %}
                                <label id="projects">Projects</label>
                                <select name="project" class="form-select" id="projects">
                                    <option value="">--Please choose an option--</option>
                                    {% for project in projects %}
                                        <option name="project" value="{{ project.id }}">{{ project.title | capitalize }}</option>
                                    {% endfor %}
                                </select>
                            {% else %}
                                    <p>No projects</p>
                            {% endif %}
                        </div>
                    </fieldset>
                    <input type="submit" value="Create New Event" class="btn btn-dark my-4">
                </form>
            </div>
        </div>
    </div>
{% endblock %}