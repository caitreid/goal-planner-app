{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-fluid events">
    {% render '../logo.liquid' %}
    <div class="row">
        <div class="col-md-3 col-sm-12">
            <h2 class="display-6">Event</h2>
            <p>Return to <a href="/events">all events</a>.</p>
        </div>
        
        <div class="col-md-9 col-sm-12">
          <article>
            <div class="card card__edit">
              <h2 class="text-capitalize py-2">
              {{ event.title | capitalize }}
            </h2>
            <p class=""><b>Date:</b> {{ event.date | date: "%A, %B %d, %Y" }}</p>

            <p><b>Description:</b> {{ event.description }}</p>
            {% if event.project %}
              <p><b>Project:</b> {{ event.project.title }}</p>
            {% endif %}
            {% if event.category %}
              <p><b>Category:</b> {{ event.category.title }}</p>
            {% endif %}
            
            {% if event.owner == userId %}
              <div class="btn-group">

                <a href="/events/{{ event.id }}/edit" class="btn btn-primary my-4">Edit</a>
                <form action="/events/{{ event.id }}?_method=DELETE" method="POST">
                  <input
                    type="submit"
                    value="Delete"
                    class="btn btn-danger mx-2 my-4">
                </form>
              </div>
            {% endif %}            
            </div>
          </article>
        </div>
      </div>
  </div>
{% endblock %}