{% layout 'layout.liquid'%}
{% block content %}
<div class="container-fluid events">
    {% render '../logo.liquid' %}
    <div class="row">
        <div class="col-md-3 col-sm-12">
            <h2 class="display-6">All Events</h2>
        </div>
        
        <div class="col-md-9 col-sm-12">
            <div class="row">
            {% if events.length > 0 %}
                {% for event in events %}
                <div class="card m-2">
                    <h3 class="card-header">{{ event.title | capitalize }}</h3>
                    <div class="card-body">
                        <p class="card-text">
                            <p><b>Description:</b> {{ event.description }}</p>
                            {% if event.project %}
                                <p><b>Project:</b> {{ event.project.title }}</p>
                            {% endif %}
                            {% if event.category %}
                                <p><b>Category:</b> {{ event.category.title }}</p>
                            {% endif %}
                        </p>
                        <a href="/events/{{ event.id }}" class="btn btn-info">
                            View
                        </a>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>Create a new <a href="/event/new">event</a>.</p>
            {% endif %}
            </div>
        </div>
    </div>

</div>
{% endblock %}