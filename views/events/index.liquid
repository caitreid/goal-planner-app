{% layout 'layout.liquid'%}
{% block content %}
<div class="container-fluid events">
    {% render '../logo.liquid' %}
    <div class="row">
        <div class="col-md-3 col-sm-12">
            <h2 class="display-6">All Events</h2>
            <p>Create a new <a href="/events/new">event</a>.</p>
        </div>
        
        <div class="col-md-9 col-sm-12">
            <div class="row">
            {% if events.length > 0 %}
                {% for event in events %}
                <div class="card m-2">
                    <h3 class="card-header text-capitalize">{{ event.title }}</h3>
                    <div class="card-body">
                        <p class="card-text">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="star bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                            </svg>
                            {% if event.date %}
                                <p><b>Date:</b> {{ event.date | date: "%A, %B %d, %Y" }}</p>
                            {% endif %}
                            {% if event.description %}
                                <p><b>Description:</b> {{ event.description }}</p>
                            {% endif %}
                            {% if event.project %}
                                <p><b>Project:</b> {{ event.project.title }}</p>
                            {% endif %}
                            {% if event.category %}
                                <p><b>Category:</b> {{ event.category.title }}</p>
                            {% endif %}
                        </p>
                        <a href="/events/{{ event.id }}" class="btn btn-info">
                            View
                        </a>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>Create a new <a href="/event/new">event</a>.</p>
            {% endif %}
            </div>
        </div>
    </div>

</div>
{% endblock %}