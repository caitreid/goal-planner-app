{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm p-5">
    <form action="/activitys?_method=PUT" method="POST">
        <fieldset>
            <legend>Create New Activity</legend>
            <label class="form-label">Title: </label>
            <input 
                type="text" 
                name="title" 
                placeholder="{{ activity.title }}"
                value="{{ activity.title }}"
                class="form-control"
            >
            <label class="form-label">Body:</label>
            <input 
                type="text" 
                name="body" 
                placeholder="{{ activity.body }}" 
                value="{{ activity.body }}" 
                class="form-control"
            >
            <label class="form-label">Amount:</label>
            <input 
                type="number" 
                name="amount"
                value="{{ activity.amount }}"
                class="form-control"
            >
            <label class="form-label">Ready:</label>
            <input 
                type="checkbox" 
                name="ready" 
                class="form-check-input"
                {% if activity.ready %}
                    checked
                {% endif %}
            >
        </fieldset>
        <input type="submit" value="Edit Activity" class="btn btn-success">
    </form>
</div>
{% endblock %}