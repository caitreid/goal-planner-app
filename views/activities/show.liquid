{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ activity.title | capitalize }}
        </h2>
        <h3>Description: {{ activity.description }}</h3>
        {% if activity.owner == userId %}
        <div class="btn-group">

            <a href="/activitys/{{ activity.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/activitys/{{ activity.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}